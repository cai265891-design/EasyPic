# -----------------------------------------------------------------------------
# App - Don't add "/" in the end of the url (same in production)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Authentication (NextAuth.js)
# -----------------------------------------------------------------------------
AUTH_SECRET=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

GITHUB_OAUTH_TOKEN=

# -----------------------------------------------------------------------------
# Database (MySQL - Neon DB)
# -----------------------------------------------------------------------------
DATABASE_URL='postgres://[user]:[password]@[neon_hostname]/[dbname]?sslmode=require'

# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
RESEND_API_KEY=
EMAIL_FROM="SaaS Starter App <onboarding@resend.dev>"

# -----------------------------------------------------------------------------
# Subscriptions (Stripe)
# -----------------------------------------------------------------------------
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=

NEXT_PUBLIC_STRIPE_PRO_MONTHLY_PLAN_ID=
NEXT_PUBLIC_STRIPE_PRO_YEARLY_PLAN_ID=

NEXT_PUBLIC_STRIPE_BUSINESS_MONTHLY_PLAN_ID=
NEXT_PUBLIC_STRIPE_BUSINESS_YEARLY_PLAN_ID=

# -----------------------------------------------------------------------------
# Amazon Image Generator - n8n Workflows
# -----------------------------------------------------------------------------
N8N_WEBHOOK_ANALYZE=https://your-n8n.com/webhook/analyze-image
N8N_WEBHOOK_COPYWRITING=https://your-n8n.com/webhook/generate-copy
N8N_WEBHOOK_IMAGES=https://your-n8n.com/webhook/generate-images
N8N_SIGNATURE_SECRET=your-webhook-signature-secret

# -----------------------------------------------------------------------------
# Amazon Image Generator - AI APIs (for n8n workflows)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-xxx
REMOVEBG_API_KEY=xxx
STABILITY_API_KEY=sk-xxx

# -----------------------------------------------------------------------------
# Amazon Image Generator - File Storage (Cloudflare R2 or AWS S3)
# -----------------------------------------------------------------------------
CLOUDFLARE_R2_ACCESS_KEY=xxx
CLOUDFLARE_R2_SECRET_KEY=xxx
CLOUDFLARE_R2_BUCKET=amazon-images
CLOUDFLARE_R2_PUBLIC_URL=https://pub-xxx.r2.dev

# OR use AWS S3
# AWS_ACCESS_KEY_ID=xxx
# AWS_SECRET_ACCESS_KEY=xxx
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=amazon-images

# -----------------------------------------------------------------------------
# Amazon Image Generator - App Settings
# -----------------------------------------------------------------------------
NEXT_PUBLIC_USE_MOCK=true  # Set to "false" for production with real APIs